<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="EditText" parent="Text" />

    <style name="EditText.SearchView" parent="EditText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:elevation">4dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:drawableRight">@drawable/ic_searcher</item>
        <item name="android:textCursorDrawable">@drawable/cursor_search</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="Text.Title.H2" parent="Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginStart">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/vertical_margin</item>
    </style>

    <style name="Text.Title.H3" parent="Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
    </style>
</resources>
