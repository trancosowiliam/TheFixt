<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imdImgPoster"
        android:layout_width="54dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/imdTxtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:maxLines="2"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/app_font"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/imdImgDownload"
        app:layout_constraintStart_toEndOf="@id/imdImgPoster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Transformers: Revenge of the Fallen" />

    <TextView
        android:id="@+id/imdTxtYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/app_font_italic"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/imdImgDownload"
        app:layout_constraintStart_toEndOf="@id/imdImgPoster"
        app:layout_constraintTop_toBottomOf="@id/imdTxtName"
        tools:text="2005" />

    <ImageView
        android:id="@+id/imdImgDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:src="@drawable/ic_download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>